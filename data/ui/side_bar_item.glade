<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="SuiSideBarItem" parent="GtkBox">
    <property name="can_focus">0</property>
    <property name="orientation">vertical</property>
    <child>
      <object class="GtkBox" id="title_box">
        <property name="can_focus">0</property>
        <child>
          <object class="GtkImage" id="image">
            <property name="width_request">16</property>
            <property name="height_request">16</property>
            <property name="can_focus">0</property>
          </object>
        </child>
        <child>
          <object class="GtkLabel" id="title_label">
            <property name="can_focus">0</property>
            <property name="label">&lt;buffer&gt;</property>
            <property name="ellipsize">end</property>
            <property name="single_line_mode">1</property>
            <property name="max_width_chars">32</property>
            <style>
              <class name="sui-title"/>
            </style>
          </object>
        </child>
        <child>
          <object class="GtkLabel" id="subtitle_label">
            <property name="can_focus">0</property>
            <property name="label">&lt;server&gt;</property>
            <property name="ellipsize">end</property>
            <style>
              <class name="sui-subtitle"/>
            </style>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="GtkBox" id="message_box">
        <property name="can_focus">0</property>
        <child>
          <object class="GtkLabel" id="recent_message_label">
            <property name="can_focus">0</property>
            <property name="label">&lt;user&gt;: &lt;message excerpt&gt;</property>
            <property name="ellipsize">end</property>
            <style>
              <class name="dim-label"/>
            </style>
          </object>
        </child>
        <child>
          <object class="GtkLabel" id="unread_count_label">
            <property name="can_focus">0</property>
            <property name="label">&lt;unread count&gt;</property>
            <property name="justify">right</property>
            <property name="ellipsize">end</property>
            <property name="width_chars">1</property>
            <property name="single_line_mode">1</property>
            <property name="max_width_chars">3</property>
            <attributes>
              <attribute name="font-desc" value="&lt;输入值&gt; 9"></attribute>
            </attributes>
            <style>
              <class name="sui-unread-count"/>
            </style>
          </object>
        </child>
      </object>
    </child>
    <style>
      <class name="sui-side-bar-item"/>
    </style>
  </template>
</interface>
